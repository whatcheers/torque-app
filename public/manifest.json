{
  "manifest_version": 3,
  "name": "Torque Calculator",
  "version": "1.0.1",
  "description": "Calculate bottle cap application and removal torque from cap diameter. Supports multiple units and industry-standard reference tables.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Torque Calculator",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [],
  "host_permissions": [],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  }
}




